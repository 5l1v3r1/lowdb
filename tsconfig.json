{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/*"
  ]
}